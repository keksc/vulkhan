#version 450
layout(local_size_x = 256) in;

struct Particle {
    vec2 position;
    vec2 velocity;
};

layout(set = 0, binding = 0) buffer Particles {
    Particle particles[];
};

void main() {
    uint id = gl_GlobalInvocationID.x;
    particles[id].position += particles[id].velocity * 0.01; // Simple physics update
}
